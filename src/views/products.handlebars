<header>
  <h1>Bienvenido!</h1>
  <nav>
    <ul>
      <li><a href="/profile">Perfil</a></li>
      <li><a href="/cart/{{cartId}}">Ir al CART</a></li>
    </ul>
  </nav>
</header>
<div class="homeContainer">
    <h1>PRODUCTS</h1>
    <h2>Lista de Productos:</h2>
    {{#if error}}
        <p>{{ error }}</p>
    {{else}}
        <table>
            <input type="hidden" id="cart-id" value="{{cartId}}" />
            <tr>
              <th>Titulo</th>
              <th>Descripcion</th>
              <th>Precio</th>
              <th>Status</th>
              <th>Categoría</th>
              <th></th>
            </tr>
            {{#each products.docs}}
                <tr>
                  <td>{{this.title}}</td>
                  <td>{{this.description}}</td>
                  <td>{{this.price}}</td>
                  {{#if this.status}}
                    <td>Disponible</td>
                  {{else}}
                    <td>No disponible</td>
                  {{/if}}
                  <td>{{this.category}}</td>
                  <td>
                      <button onclick="addToCart('{{this._id}}')">Add To Cart</button>
                  </td>
                </tr>
            {{/each}}
        </table>
    {{/if}}
    <div class="paginateContainer">
      <h4>Pagina: {{products.page}} de {{products.totalPages}}</h4>
      <div class="prevNextPageContainer">
        {{#if products.hasPrevPage }}
          <a href="/products?page={{products.prevPage}}">Página previa</a>
        {{/if}}
        {{#if products.hasNextPage }}
          <a href="/products?page={{products.nextPage}}">Página siguiente</a>
        {{/if}}
      </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/products.js"></script>